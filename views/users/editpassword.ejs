<%- include ../partials/header %>
    <!-- awal Navbar -->
    <div class="container-fluid all-menu">
        <form action="" method="post">
            <div class="row">
                <div class="col">
                    <%- include ../partials/alert %>
                        <h1>Change Password</h1>
                        <div class="card text-start">
                            <div class="card-header">
                                <h6 class="text-primary">Change Your Password</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3 row">
                                    <label for="oldPassword" class="col-sm-2 col-form-label">Old Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="oldPassword" name="oldPassword">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="passwordOne" class="col-sm-2 col-form-label">New Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="passwordOne" name="passwordOne">
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="passwordTwo" class="col-sm-2 col-form-label">Retype Password</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="passwordTwo" name="passwordTwo">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-muted">
                                <div class="btn-group dropstart">
                                    <button type="submit" class="btn btn-success dropdown-toggle-split">
                                        <span class="btn-logo"><i class="fa-solid fa-database"></i></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <!-- Dropdown menu links -->
                                    </ul>
                                    <button type="submit" class="btn btn-secondary"
                                        style="background-color: rgb(59, 160, 59);">
                                        <span>Save</span>
                                    </button>
                                </div>
                                <a href="/dashboard" style="text-decoration: none;">
                                    <div class="btn-group dropstart">
                                        <button type="button" class="btn btn-warning dropdown-toggle-split"
                                            style="background-color: rgb(117, 117, 0);">
                                            <span class="btn-logo"><i class="fa-solid fa-rotate-left"></i></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <!-- Dropdown menu links -->
                                        </ul>
                                        <button type="button" class="btn btn-warning">
                                            <span>back</span>
                                        </button>
                                    </div>
                                </a>
                            </div>
                        </div>
                </div>
            </div>
        </form>
    </div>

    <%- include ../partials/footer %>