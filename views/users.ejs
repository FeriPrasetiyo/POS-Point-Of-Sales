<%- include partials/header %>
    <!-- awal Navbar -->
    <div class="container-fluid all-menu">
        <div class="row">
            <div class="col">
                <h2>Users</h2>
                <h6>this is data of Users</h6>
                <div class="card">
                    <div class="card-header">
                        <a href="/users/add" style="text-decoration: none;">
                            <div class="btn-group dropstart">
                                <button type="button" class="btn btn-primary dropdown-toggle-split"
                                    style="background-color: rgb(5, 15, 151);">
                                    <span class="btn-logo"><i class="fa-solid fa-plus"></i></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <!-- Dropdown menu links -->
                                </ul>
                                <button type="button" class="btn btn-primary">
                                    <span>Save</span>
                                </button>
                            </div>
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <table id="example" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>User ID</th>
                                            <th>Email</th>
                                            <th>name</th>
                                            <th>Role</th>
                                            <th>Action</th>
                                    </thead>
                                    <tbody>
                                        <% users.forEach((item, index)=>{ %>
                                            <tr>
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td>
                                                    <%= item.email %>
                                                </td>
                                                <td>
                                                    <%= item.name %>
                                                </td>
                                                <td>
                                                    <%= item.role %>
                                                </td>
                                                <td>
                                                    <a href="/users/edit/<%= item.userid %>"
                                                        style="text-decoration: none;">
                                                        <button type="button" class="btn btn-success"
                                                            style="border-radius: 50%;"><i
                                                                class="fa-solid fa-circle-exclamation"></i></button>
                                                    </a>
                                                    <a type="dropdown-item" data-bs-toggle="modal"
                                                        data-bs-target="#exampleModalDelete">
                                                        <button type="button" class="btn btn-danger"
                                                            style="border-radius: 50%;"><i
                                                                class="fa-solid fa-trash"></i></button>
                                                    </a>
                                                    <div class="modal fade" id="exampleModalDelete" tabindex="-1"
                                                        aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                                                                        Yakin
                                                                        Hapus</h1>
                                                                    <button type="button" class="btn-close"
                                                                        data-bs-dismiss="modal"
                                                                        aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    anda akan Hapus
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <a type="a" class="btn btn-secondary"
                                                                        data-bs-dismiss="modal">Tidak jadi</a>
                                                                    <a type="a" class="btn btn-secondary"
                                                                        href="/users/delete/<%= item.userid %>">Hapus</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>$(document).ready(function () {
            const table = $('#example').DataTable({
                "lengthMenu": [[3, 6, 9, 12, -1], [3, 6, 9, 12, 'All']
                ]
            });
        });


    </script>
    <%- include partials/footer %>