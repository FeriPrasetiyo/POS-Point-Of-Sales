<%- include ../partials/header %>
    <div class="container-fluid all-menu">
        <form action="" method="post">
            <div class="row">
                <div class="col">
                    <h1>Units</h1>
                    <div class="card text-start">
                        <div class="card-header">
                            <h6 class="text-primary">Form units</h6>
                        </div>
                        <div class="card-body">
                            <div class="mb-3 row">
                                <label for="staticunit" class="col-sm-2 col-form-label">unit</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="unit" name="unit"
                                        value="<%= item.unit %>">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="staticName" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="name" name="name"
                                        value="<%= item.name %>">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="staticnote" class="col-sm-2 col-form-label">Note</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="note" name="note"
                                        value="<%= item.note %>">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <div class="btn-group dropstart">
                                <button type="submit" class="btn btn-success dropdown-toggle-split">
                                    <span class="btn-logo"><i class="fa-solid fa-database"></i></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <!-- Dropdown menu links -->
                                </ul>
                                <button type="submit" class="btn btn-secondary"
                                    style="background-color: rgb(59, 160, 59);">
                                    <span>Save</span>
                                </button>
                            </div>
                            <a href="/units" style="text-decoration: none;">
                                <div class="btn-group dropstart">
                                    <button type="button" class="btn btn-warning dropdown-toggle-split"
                                        style="background-color: rgb(117, 117, 0);">
                                        <span class="btn-logo"><i class="fa-solid fa-rotate-left"></i></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <!-- Dropdown menu links -->
                                    </ul>
                                    <button type="button" class="btn btn-warning">
                                        <span>back</span>
                                    </button>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <%- include ../partials/footer %>