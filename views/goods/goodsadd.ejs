<%- include ../partials/header %>
    <!-- awal Navbar -->
    <div class="container-fluid all-menu">
        <form action="/goods/add" method="post" encType="multipart/form-data">
            <div class="row">
                <div class="col">
                    <h1>Goods</h1>
                    <div class="card text-start">
                        <div class="card-header">
                            <div class="row">
                                <div class="col">
                                    <h6 class="text-primary">Form add</h6>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-3 row">
                                <label for="staticbarcode" class="col-sm-2 col-form-label">Barcode</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="barcode" name="barcode">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="staticName" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="name" name="name">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="inputstock" class="col-sm-2 col-form-label">Stock</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="stock" name="stock">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="inputpurchase" class="col-sm-2 col-form-label">Purchase Price</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="purchase" name="purchase">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="inputselling" class="col-sm-2 col-form-label">Selling Price</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="selling" name="selling">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="inputunit" class="col-sm-2 col-form-label">Unit</label>
                                <div class="col-sm-10">
                                    <select class="form-select" aria-label="Default select example" name="unit">
                                        <option value="">Open this select menu</option>
                                        <% units.forEach((item, index)=>{%>
                                            <option value="<%= item.unit%>">
                                                <%= item.unit %>
                                            </option>
                                            <%})%>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="inputpicture" class="col-sm-2 col-form-label">Picture</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="file" onchange="loadFile(event)" class="btn-kirim"
                                        name="sampleFile" accept="image/png, image/gif, image/jpeg">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="inputselling"
                                    class="col-sm-2 col-form-label btn-kirim d-none">Preview</label>
                                <div class="col-sm-10">
                                    <img id="output" width="400" height="auto" />
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <div class="btn-group dropstart">
                                <button type="submit" class="btn btn-success dropdown-toggle-split">
                                    <span class="btn-logo"><i class="fa-solid fa-database"></i></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <!-- Dropdown menu links -->
                                </ul>
                                <button type="submit" class="btn btn-secondary"
                                    style="background-color: rgb(59, 160, 59);">
                                    <span>Save</span>
                                </button>
                            </div>
                            <a href="/goods" style="text-decoration: none;">
                                <div class="btn-group dropstart">
                                    <button type="button" class="btn btn-warning dropdown-toggle-split"
                                        style="background-color: yellow;">
                                        <span class="btn-logo"><i class="fa-solid fa-rotate-left"></i></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <!-- Dropdown menu links -->
                                    </ul>
                                    <button type="button" class="btn btn-warning">
                                        <span>Back</span>
                                    </button>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script>
        const labelPreview = document.querySelector('.btn-kirim');

        const loadFile = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('output');
                output.src = reader.result;
                labelPreview.classList.remove('d-none')
            };
            reader.readAsDataURL(event.target.files[0]);
        };


    </script>

    <%- include ../partials/footer %>